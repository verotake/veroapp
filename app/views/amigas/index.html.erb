<h1>Listing amigas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amigas.each do |amiga| %>
      <tr>
        <td><%= amiga.name %></td>
        <td><%= amiga.description %></td>
        <td><%= amiga.picture %></td>
        <td><%= link_to 'Show', amiga %></td>
        <td><%= link_to 'Edit', edit_amiga_path(amiga) %></td>
        <td><%= link_to 'Destroy', amiga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Amiga', new_amiga_path %>
